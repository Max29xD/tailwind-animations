---
import Codex from '@components/codex/Codex.astro'
import Layout from '@layouts/Layout.astro'
import Card from '@components/Card.astro'
import { Image } from 'astro:assets'
import banner from '@images/banner.png'

import pkg from '../../../package.json'
import theme from '../../../src/theme.js'
const { animation } = theme
const { version } = pkg
---

<Layout
  title='Tailwind CSS Animations Plugin: Community-Powered Animation Magic'
>
  <wc-toast></wc-toast>
  <main class='pb-32'>
    <header class='mx-auto flex flex-col items-center justify-center py-10'>
      <div class='flex flex-col items-end justify-center gap-x-2'>
        <Image
          src={banner}
          alt='Banner Of Tailwind CSS Animations Plugin'
          format='webp'
          class='mb-4 scale-110 mix-blend-screen'
          draggable='false'
          height={350}
        />
        <h1 class='sr-only'>tailwind css animations</h1>
        <div class='-mt-10 flex gap-x-2 sm:-mt-20'>
          <h2 class='select-none font-medium opacity-70'>
            the plugin that you need! =)
          </h2>
          <span
            class='inline-flex select-none items-center justify-center rounded-lg bg-[#23262E] px-2 py-1 text-xs font-medium'
            >v.{version}</span
          >
          <a
            href='https://github.com/midudev/tailwind-animations'
            target='_blank'
            aria-label='Github repository'
            title='Github repository'
            rel='noopener noreferrer'
            class='inline-flex select-none items-center justify-center rounded-lg bg-[#23262E] px-2 py-1 font-medium'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='1em'
              height='1em'
              viewBox='0 0 24 24'
              ><path
                fill='currentColor'
                d='M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2'
              ></path></svg
            >
          </a>
        </div>
      </div>
      <div class='mt-10 max-w-full'>
        <Codex
          label='1. Install the dependency'
          style='bg-andromeeda-500'
          theme='andromeeda'
          code='npm install @midudev/tailwind-animations'
          CopyToClipboard
        />
        <Codex
          label='2. Add to your configuration'
          style='bg-andromeeda-500'
          theme='andromeeda'
          lang='js'
          code={`import animations from '@midudev/tailwind-animations'

export default {
  // ...rest of the options
  plugins: [animations],
}`}
          CopyToClipboard
        />
      </div>
    </header>

    <section
      id='cards-container'
      class='group/card m-auto grid grid-cols-responsive-175 gap-4'
    >
      {
        Object.keys(animation).map((animationKey) => (
          <Card animationKey={animationKey} />
        ))
      }
    </section>
  </main>
</Layout>

<style is:global>
  html::-webkit-scrollbar {
    @apply w-2 bg-andromeeda-700;
  }
  html::-webkit-scrollbar-thumb {
    @apply rounded-full bg-cyan-500;
  }
</style>
