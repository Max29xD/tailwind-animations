---
import '@fontsource/poppins'
import Footer from '@components/Footer.astro'
import ScrollToTop from '@components/ScrollToTop.astro'
import { SEO } from 'astro-seo'
import Background from '@components/Background.astro'
interface Props {
  title: string
}

const { title } = Astro.props
const url = Astro.url
const description = 'Tailwind plugin to add easily animations to your website'
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <SEO
      {title}
      {description}
      openGraph={{
        image: {
          url: `${url}cover.png`,
          type: 'image/webp',
          width: 1200,
          height: 630,
          alt: 'Cover Tailwind CSS Animations Plugin'
        },
        basic: {
          title,
          type: 'website',
          image: `${url}cover.png`
        }
      }}
      twitter={{
        title,
        image: `${url}cover.png`,
        creator: '@marcosbonilla29',
        description,
        site: `${url}`,
        card: 'summary_large_image',
        imageAlt: 'Cover Tailwind CSS Animations Plugin'
      }}
      extend={{
        link: [{ rel: 'icon', href: '/favicon.png' }],
        meta: [
          {
            name: 'viewport',
            content: 'width=device-width, initial-scale=1.0'
          },
          {
            name: 'twitter:image',
            content: `${url}cover.png`
          },
          { name: 'twitter:title', content: title },
          { name: 'twitter:description', content: description },
          {
            name: 'keywords',
            content:
              'tailwind, css, plugin, ui, ux, animation, animations, tailwindcss, astro, react, vue, svelte, transition'
          },
          { name: 'language', content: 'english' },
          { name: 'apple-mobile-web-app-capable', content: 'yes' },
          { name: 'robots', content: 'index, follow' },
          {
            name: 'apple-mobile-web-app-status-bar-style',
            content: 'black-translucent'
          },
          { httpEquiv: 'cache-control', content: 'no-cache' },
          { httpEquiv: 'expires', content: '180' },
          { name: 'theme-color', content: '#202020' },
          { name: 'msapplication-navbutton-color', content: '#202020' }
        ]
      }}
    />
  </head>
  <body class='overflow-x-hidden bg-andromeeda-600 font-[Poppins] text-white'>
    <div class='m-auto max-w-4xl px-6 sm:px-8'>
      <slot />
    </div>
    <ScrollToTop />
    <Footer />
    <Background />
  </body>
</html>
